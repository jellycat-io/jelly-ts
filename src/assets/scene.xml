<SampleLevel>
  <!--  *** be careful!! comma (,) is not a supported syntax!!  -->
  <!--  make sure there are no comma in between attributes -->
  <!--  e.g., do NOT do:  PosX="20", PosY="30" -->
  <!--  notice the "comma" between PosX and PosY: Syntax error! -->

  <!-- Cameras -->
  <!-- Viewport: x, y, w, h -->
  <Camera CenterX="20" CenterY="60" Width="20" Viewport="20 40 600 300" BgColor="0.8 0.8 0.8 1.0" />

  <!-- Squares rotation is in degrees -->
  <Square PosX="20" PosY="60" Width="5" Height="5" Rotation="30" Color="Blue" />
  <Square PosX="20" PosY="60" Width="2" Height="2" Rotation="0" Color="Red" />

</SampleLevel>